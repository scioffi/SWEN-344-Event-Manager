{{#section 'head'}}
    <!-- stuff that goes in head...example: -->
    <title>Create an Event | Event Manager</title>
{{/section}}

<div id="page-event-form">
    <h1>Create a new Event</h1>
    <form method="post" action="/api/createEvent/" id="event-form">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="event_title" class="control-label">Event Title</label>
                    <input type="text" class="form-control input-lg" name="event_title" id="event_title" placeholder="Event Title" required>
                </div>
                <div class="form-group">
                    <label for="event_desc" class="control-label">Event Description</label>
                    <textarea class="form-control" name="event_desc" id="event_desc" placeholder="Event Description" rows="3" cols="100%" required></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6" id="form-left">
                <div class="form-group">
                    <label for="event_location">Location</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
                        <input type="text" class="form-control" name="event_location" id="event_location" placeholder="Event Location" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="event_tag" class="control-label">Give your event a tag</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-tag"></span></span>
                        <input type="text" class="form-control" name="event_tag" id="event_tag" placeholder="Event Tag" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="event_image" class="control-label">Event Image (URL) [Optional]</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></span>
                        <input type="text" class="form-control" name="event_image" id="event_image" placeholder="Event Image (URL)">
                    </div>
                </div>
            </div>
            <div class="col-md-6" id="form-right">
                <div class="form-group">
                    <label for="event_start_time" class="control-label">Start Time</label>
                    <div class="input-group date form_datetime" data-date-format="MM dd yyyy - HH:ii p" data-link-field="event_start_time">
                        <input class="form-control" name="event_start_time" size="16" type="text" value="" readonly required>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    </div>
                    <input type="hidden" id="event_start_time" value="" />
                </div>
                <div class="form-group">
                    <label for="event_end_time" class="control-label">End Time</label>
                    <div class="input-group date form_datetime" data-date-format="MM dd yyyy - HH:ii p" data-link-field="event_start_time">
                        <input class="form-control" name="event_end_time" size="16" type="text" value="" readonly required>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    </div>
                    <input type="hidden" id="event_end_time" value="" />
                </div>
                <div class="form-group">
                    <label for="event_price" class="control-label">Event Price</label>
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <input type="text" class="form-control" name="event_price" id="event_price" placeholder="Event Price" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" value="Create Event" class="btn btn-primary btn-lg btn-block">
                </div>
            </div>
            <div class="col-md-6">
                <input type="button" onClick="window.history.back()" value="Cancel" class="btn btn-info btn-lg btn-block">
            </div>
        </div>
    </form>
</div>